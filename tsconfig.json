{
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  },
  "compileOnSave": true,
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2020",
    "outDir": "./bin",
    "rootDir": "./src",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution":"Node",
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
